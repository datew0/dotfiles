// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+b",
        "when": "editorHasSelection && editorLangId == 'latex'",
        "command": "editor.action.insertSnippet",
        "args": {
            "name": "textbf"
        }
    },
    {
        "key": "cmd+i",
        "when": "editorHasSelection && editorLangId == 'latex'",
        "command": "editor.action.insertSnippet",
        "args": {
            "name": "textit"
        }
    },
    {
        "key": "cmd+u",
        "when": "editorHasSelection && editorLangId == 'latex'",
        "command": "editor.action.insertSnippet",
        "args": {
            "name": "underline"
        }
    },
    {
        "key": "cmd+e",
        "when": "editorHasSelection && editorLangId == 'latex'",
        "command": "editor.action.insertSnippet",
        "args": {
            "name": "textem"
        }
    },
    {
        "key": "cmd+t",
        "when": "editorHasSelection && editorLangId == 'latex'",
        "command": "editor.action.insertSnippet",
        "args": {
            "name": "texttt"
        }
    }
]
